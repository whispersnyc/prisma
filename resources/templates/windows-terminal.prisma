# Prisma Template - Windows Terminal
# Updates Windows Terminal settings.json with pywal colors
# This demonstrates using @match for JSON properties

@target HOME\AppData\Local\Packages\Microsoft.WindowsTerminal_8wekyb3d8bbwe\LocalState\settings.json

# Match and update the color scheme section
# These patterns will find and replace the pywal color scheme entries
@match ".*\"name\":\s*\"pywal\".*"
        "name": "pywal",

@match ".*\"background\":\s*\"#[0-9a-fA-F]{6}\".*\"pywal\".*"
        "background": "{background}",

@match ".*\"foreground\":\s*\"#[0-9a-fA-F]{6}\".*\"pywal\".*"
        "foreground": "{foreground}",

@match ".*\"black\":\s*\"#[0-9a-fA-F]{6}\".*\"pywal\".*"
